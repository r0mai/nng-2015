#!/bin/bash

set -e

function fix_include_thingies() {
    file="$1"

    sed -i '' $'s/^[ \t]*#[ \t]*include[ \t]*[<"]boost\\(.*\\)[>"].*$/#include "prezicsson_boost\\1"/g' "$file"
    sed -i '' $'s/^[ \t]*#[ \t]*include[ \t]*BOOST_USER_CONFIG.*$/#include "prezicsson_boost\\/config\\/user.hpp"/g' "$file"
    sed -i '' $'s/^[ \t]*#[ \t]*include[ \t]*BOOST_COMPILER_CONFIG*$/#include "prezicsson_boost\\/config\\/compiler\\/visualc.hpp"/g' "$file"
    sed -i '' $'s/^[ \t]*#[ \t]*include[ \t]*BOOST_STDLIB_CONFIG*$/#include "prezicsson_boost\\/config\\/stdlib\\/dinkumware.hpp"/g' "$file"
}

boost_root='/Users/r0mai/build/boost/build-1_59/include/boost'
boost_dir='prezicsson_boost'

files="$(cat include_list | grep boost | sed 's/^1>.*boost_1_59_0\\boost//g' | sort | uniq)"

rm -rf ${boost_dir}
mkdir -p ${boost_dir}

for f in $files; do
    echo ${f}
    mkdir -p "$(dirname ${boost_dir}/${f})"
    cp "${boost_root}/${f}" "${boost_dir}/${f}"
    fix_include_thingies "${boost_dir}/${f}"
done
